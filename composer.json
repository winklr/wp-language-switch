{
    "name": "mwinkler/wp-language-switch",
    "description": "Wordpress plugin providing language switch to load localized wordpress instances",
    "type": "wordpress-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Martin Winkler",
            "email": "martin@werk85.de"
        }
    ],
    "autoload": {
        "psr-4": {
            "WPLangSwitch\\": "src/"
        }
    },
    "require": {
        "composer/installers": "^1.9"
    },
    "suggest": {
        "timber/timber": "Required for template rendering (^1.24 || ^2.0)"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true
        }
    }
}